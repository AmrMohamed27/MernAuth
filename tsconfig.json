{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noImplicitAny": false,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./**/*", "server.ts", "./types/**/*.d.ts", "./types/express"],
  "exclude": ["node_modules"]
}
